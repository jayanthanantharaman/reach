# =============================================================================
# REACH - Real Estate Automated Content Hub
# Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual API keys
# cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=REACH
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Google API Key (Required)
# Used for both Gemini LLM and Imagen image generation
# Get your API key from: https://makersuite.google.com/app/apikey
# -----------------------------------------------------------------------------
GOOGLE_API_KEY=your_google_api_key_here

# Gemini Model Configuration
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=8192

# -----------------------------------------------------------------------------
# SERP API (Required for web research)
# Get your API key from: https://serpapi.com/
# -----------------------------------------------------------------------------
SERP_API_KEY=your_serp_api_key_here

# SERP Configuration
SERP_RESULTS_COUNT=10

# -----------------------------------------------------------------------------
# Content Settings
# -----------------------------------------------------------------------------
MAX_BLOG_LENGTH=2000
MAX_LINKEDIN_LENGTH=3000
DEFAULT_LANGUAGE=en

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_TOKENS=100000

# -----------------------------------------------------------------------------
# Memory Settings
# -----------------------------------------------------------------------------
CONVERSATION_MEMORY_LIMIT=20
SESSION_TIMEOUT_MINUTES=60

# -----------------------------------------------------------------------------
# Quality Settings
# -----------------------------------------------------------------------------
MIN_QUALITY_SCORE=0.7
ENABLE_QUALITY_VALIDATION=true

# -----------------------------------------------------------------------------
# Optional: OpenAI API (Not used in main workflow)
# Only needed if you want to use DALL-E as an alternative image generator
# Get your API key from: https://platform.openai.com/api-keys
# -----------------------------------------------------------------------------
# OPENAI_API_KEY=your_openai_api_key_here
# DALLE_MODEL=dall-e-3
# DALLE_IMAGE_SIZE=1024x1024
# DALLE_QUALITY=standard